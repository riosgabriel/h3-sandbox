{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["@opentelemetry/instrumentation-http"]
  },
  "include": ["src/**/*", "eslint.config.mjs", "jest.config.js"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
